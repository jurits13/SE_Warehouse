<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ee.ut.math.tvt.salessystem.ui.controllers.StockController">

  <VBox spacing="20" GridPane.rowIndex="0" BorderPane.alignment="CENTER" alignment="CENTER" style="-fx-padding: 20;">
    <GridPane hgap="10" vgap="10">
      <Label text="Bar Code:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-padding: 0 10 0 0;"/> 
      <TextField fx:id="idField" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="100"/> 

      <Label text="Amount:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-padding: 0 10 0 0;"/> 
      <TextField fx:id="quantityField" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="100"/> 

      <Label text="Name:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-padding: 0 10 0 0;"/> 
      <TextField fx:id="nameField" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="100"/> 

      <Label text="Price:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-padding: 0 10 0 0;"/> 
      <TextField fx:id="priceField" GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="100"/> 

      <Button text="Add product" onAction="#addProduct" GridPane.rowIndex="2" GridPane.columnIndex="4"/>
    </GridPane>
  </VBox>


  <TitledPane alignment="CENTER" animated="false" collapsible="false" text="Warehouse status" GridPane.rowIndex="1" stylesheets="DefaultTheme.css">

    <BorderPane>
      <center>
        <TableView fx:id="warehouseTableView" styleClass="blue_style" BorderPane.alignment="CENTER" >
          <columns>
            <TableColumn fx:id="idColumn" text="Id">
              <cellValueFactory>
                <PropertyValueFactory property="id" />
              </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="nameColumn" text="Name">
              <cellValueFactory>
                <PropertyValueFactory property="name" />
              </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="priceColumn" text="Price">
              <cellValueFactory>
                <PropertyValueFactory property="price" />
              </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="quantityColumn" text="Quantity">
              <cellValueFactory>
                <PropertyValueFactory property="quantity" />
              </cellValueFactory>
            </TableColumn>
          </columns>
          <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
          </columnResizePolicy>
        </TableView>
      </center>
      <top>
        <Button onMouseClicked="#refreshButtonClicked" text="Refresh warehouse" BorderPane.alignment="TOP_LEFT" />
      </top>
    </BorderPane>
  </TitledPane>

</GridPane>
